.flex.flex-col.items-center.justify-center.px-6.py-8.mx-auto.lg:py-0
  = form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post, class: 'bordered sm:max-w-md'}) do |f|

    %h1.text-3xl.text-green=I18n.t(:header, scope: [:devise, :passwords, :new])
    %p.text-light-blue=I18n.t(:promt, scope: [:devise, :passwords, :new])

    = render 'devise/shared/error_messages', resource: resource

    = f.label :email, class: 'label block mb-2 mt-6'
    = f.email_field :email, autofocus: true, autocomplete: 'email', class: 'input block w-full'

    = f.submit I18n.t(:submit, scope: [:devise, :passwords, :new]), class: 'button bg-purple w-full'

    = render 'devise/shared/links'