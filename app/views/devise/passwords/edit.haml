.flex.flex-col.items-center.justify-center.px-6.py-8.mx-auto.lg:py-0
  = form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put, class: 'bordered sm:max-w-md'}) do |f|

    %h1.text-3xl.text-green=I18n.t(:header, scope: [:devise, :passwords, :edit])

    = render "devise/shared/error_messages", resource: resource

    = f.hidden_field :reset_password_token

    = render "devise/shared/password_fields", f: f

    = f.submit I18n.t(:submit, scope: [:devise, :passwords, :edit]), class: 'button bg-purple w-full'

    = render 'devise/shared/links'